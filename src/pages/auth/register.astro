---
import Navigation from "../../components/layout/Navigation.astro";
import Layout from "../../layouts/Layout.astro";

const search = Astro.url.searchParams;
const error = search.get("error");
const resetSecondsStr = search.get("reset_seconds");
const resetSecondsParsed = resetSecondsStr
	? parseInt(resetSecondsStr, 10)
	: undefined;
const resetSeconds = Number.isNaN(resetSecondsParsed)
	? undefined
	: resetSecondsParsed;
const remainingStr = search.get("remaining");
const remainingAttemptsParsed = remainingStr
	? parseInt(remainingStr, 10)
	: undefined;
const remainingAttempts = Number.isNaN(remainingAttemptsParsed)
	? undefined
	: remainingAttemptsParsed;

let message = "";
let showSignInLink = false;
const isRateLimited = error === "rate_limit";

if (error) {
	switch (error) {
		case "missing_fields":
			message = "Email and password are required";
			break;
		case "failed":
			message = "Failed to register account. Please try again.";
			break;
		case "user_already_exists":
			message = "An account with this email already exists.";
			showSignInLink = true;
			break;
		case "profile_creation_failed":
			message =
				"Failed to create user profile. Please try again or contact support.";
			break;
		case "rate_limit":
			message =
				"Too many registration attempts. Please wait before trying again.";
			break;
		default:
			message = "An unexpected error occurred. Please try again.";
	}
}
---

<Layout title="Register" description="Create a new account">
  <div class="min-h-screen bg-gray-50">
    <Navigation />
    
    <div class="max-w-3xl mx-auto px-6 py-12">
      <div class="mb-6">
        <a
          href="/"
          class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900 font-medium"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Home
        </a>
      </div>

      <div class="max-w-md mx-auto space-y-8">
        <div>
          <h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Register</h1>
          <p class="mt-2 text-center text-sm text-gray-600">
            Already have an account? <a href="/signin" class="font-medium text-blue-600 hover:text-blue-500">Sign in</a>
          </p>
        </div>

        {message && (
          <div class="rounded-md bg-red-50 p-4" role="alert">
            <div class="flex">
              <div class="ml-0">
                <h3 class="text-sm font-medium text-red-800">
                  {message}
                  {showSignInLink && (
                    <> <a href="/signin" class="font-bold underline hover:text-red-900">Sign in</a>.</>
                  )}
                </h3>
                {isRateLimited && resetSeconds !== undefined && (
                  <p class="text-sm text-red-700 mt-2" id="rate-limit-countdown"></p>
                )}
                {remainingAttempts !== undefined && remainingAttempts <= 3 && !isRateLimited && (
                  <p class="text-sm text-red-700 mt-2">
                    You have {remainingAttempts} attempt{remainingAttempts === 1 ? "" : "s"} remaining.
                  </p>
                )}
              </div>
            </div>
          </div>
        )}

        <form class="mt-8 space-y-6" action="/api/auth/email/register" method="post" id="register-form">
          <div class="rounded-md shadow-sm -space-y-px">
            <div>
              <label for="email" class="sr-only">Email</label>
              <input 
                type="email" 
                name="email" 
                id="email" 
                required 
                autocomplete="email"
                disabled={isRateLimited}
                class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm disabled:bg-gray-100 disabled:cursor-not-allowed" 
                placeholder="Email address"
              />
            </div>
            <div>
              <label for="password" class="sr-only">Password</label>
              <input 
                type="password" 
                name="password" 
                id="password" 
                required 
                autocomplete="new-password"
                disabled={isRateLimited}
                class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm disabled:bg-gray-100 disabled:cursor-not-allowed" 
                placeholder="Password"
              />
            </div>
          </div>
          
          <!-- Hidden timezone field -->
          <input type="hidden" name="timezone" id="timezone" value="" />
          <div>
            <button 
              type="submit" 
              disabled={isRateLimited}
              class={`group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 ${
                isRateLimited
                  ? "text-white bg-gray-400 cursor-not-allowed"
                  : "text-white bg-blue-600 hover:bg-blue-700 cursor-pointer"
              }`}
            >
              Register
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</Layout>

<script>
	let interval: ReturnType<typeof setInterval> | undefined;

	document.addEventListener('DOMContentLoaded', () => {
		const form = document.getElementById('register-form');
		const timezoneInput = document.getElementById('timezone');
		const countdownElement = document.getElementById('rate-limit-countdown');
		
		if (!(form instanceof HTMLFormElement) 
			|| !(timezoneInput instanceof HTMLInputElement)) {
			console.error('Registration form elements not found');
			return;
		}

		// Detect timezone

		function detectAndSetTimezone() {
			// Detect user's timezone
			if (Intl && Intl.DateTimeFormat && timezoneInput instanceof HTMLInputElement) {
				try {
					// Detect timezone
					const detectedTimezone = Intl.DateTimeFormat().resolvedOptions().timeZone;
					timezoneInput.value = detectedTimezone;
				} catch (error) {
					console.error('Timezone detection failed:', error);
				}
			} else {
				console.error('Intl or DateTimeFormat not available');
			}
		}

		// Initial detection
		detectAndSetTimezone();

		// Re-detect on form submission if values are empty
		form.addEventListener('submit', () => {
			// If values are empty, try to detect again
			// Server-side validation will handle missing values
			if (timezoneInput instanceof HTMLInputElement && !timezoneInput.value) {
				detectAndSetTimezone();
			}
		});

		// Rate limit countdown timer
		if (countdownElement) {
			const resetSecondsParam = new URLSearchParams(window.location.search).get('reset_seconds');
			if (resetSecondsParam) {
				const parsedSeconds = parseInt(resetSecondsParam, 10);
				if (Number.isNaN(parsedSeconds)) {
					return;
				}
				let remainingSeconds = parsedSeconds;

				// Clear any existing interval to prevent race conditions
				if (interval) {
					clearInterval(interval);
					interval = undefined;
				}
				
				function formatDuration(seconds: number): string {
					if (seconds <= 0) return 'now';
					
					const hours = Math.floor(seconds / 3600);
					const minutes = Math.floor((seconds % 3600) / 60);
					const secs = seconds % 60;
					
					if (hours > 0) {
						if (minutes === 0) {
							return `${hours} hour${hours === 1 ? '' : 's'}`;
						}
						return `${hours} hour${hours === 1 ? '' : 's'} and ${minutes} minute${minutes === 1 ? '' : 's'}`;
					}
					if (minutes > 0) {
						if (secs === 0) {
							return `${minutes} minute${minutes === 1 ? '' : 's'}`;
						}
						return `${minutes} minute${minutes === 1 ? '' : 's'} and ${secs} second${secs === 1 ? '' : 's'}`;
					}
					return `${secs} second${secs === 1 ? '' : 's'}`;
				}
				
				function updateCountdown() {
					if (!countdownElement) return;
					
					if (remainingSeconds <= 0) {
						if (interval) {
							clearInterval(interval);
							interval = undefined;
						}
						countdownElement.textContent = 'Rate limit has expired. You can try again now.';
						// Reload page to clear rate limit state
						setTimeout(() => {
							window.location.href = '/auth/register';
						}, 2000);
						return;
					}
					
					countdownElement.textContent = `Please try again in ${formatDuration(remainingSeconds)}.`;
					remainingSeconds--;
				}
				
				updateCountdown();
				interval = setInterval(updateCountdown, 1000);
				
				// Cleanup on page unload
				window.addEventListener('beforeunload', () => {
					if (interval) {
						clearInterval(interval);
						interval = undefined;
					}
				});
			}
		}
	});
</script>
