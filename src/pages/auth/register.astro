---
import Navigation from "../../components/layout/Navigation.astro";
import Layout from "../../layouts/Layout.astro";

const search = Astro.url.searchParams;
const error = search.get("error");

let message = "";
let showSignInLink = false;

if (error) {
	switch (error) {
		case "missing_fields":
			message = "Email and password are required";
			break;
		case "failed":
			message = "Failed to register account. Please try again.";
			break;
		case "user_already_exists":
			message = "An account with this email already exists.";
			showSignInLink = true;
			break;
		case "profile_creation_failed":
			message =
				"Failed to create user profile. Please try again or contact support.";
			break;
		default:
			message = "An unexpected error occurred. Please try again.";
	}
}
---

<Layout title="Register" description="Create a new account">
  <div class="min-h-screen bg-gray-50">
    <Navigation />
    
    <div class="max-w-3xl mx-auto px-6 py-12">
      <div class="mb-6">
        <a
          href="/"
          class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900 font-medium"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Home
        </a>
      </div>

      <div class="max-w-md mx-auto space-y-8">
        <div>
          <h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Register</h1>
          <p class="mt-2 text-center text-sm text-gray-600">
            Already have an account? <a href="/signin" class="font-medium text-blue-600 hover:text-blue-500">Sign in</a>
          </p>
        </div>

        {message && (
          <div class="rounded-md bg-red-50 p-4" role="alert">
            <div class="flex">
              <div class="ml-0">
                <h3 class="text-sm font-medium text-red-800">
                  {message}
                  {showSignInLink && (
                    <> <a href="/signin" class="font-bold underline hover:text-red-900">Sign in</a>.</>
                  )}
                </h3>
              </div>
            </div>
          </div>
        )}

        <form class="mt-8 space-y-6" action="/api/auth/email/register" method="post" id="register-form">
          <div class="rounded-md shadow-sm -space-y-px">
            <div>
              <label for="email" class="sr-only">Email</label>
              <input 
                type="email" 
                name="email" 
                id="email" 
                required 
                autocomplete="email"
                class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" 
                placeholder="Email address"
              />
            </div>
            <div>
              <label for="password" class="sr-only">Password</label>
              <input 
                type="password" 
                name="password" 
                id="password" 
                required 
                autocomplete="new-password"
                class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" 
                placeholder="Password"
              />
            </div>
          </div>
          
          <!-- Hidden timezone and time format fields -->
          <input type="hidden" name="timezone" id="timezone" value="" />
          <input type="hidden" name="time_format" id="time_format" value="" />
          <div>
            <button 
              type="submit" 
              class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer"
            >
              Register
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</Layout>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const form = document.getElementById('register-form');
		const timezoneInput = document.getElementById('timezone');
		const timeFormatInput = document.getElementById('time_format');
		
		if (!(form instanceof HTMLFormElement) 
			|| !(timezoneInput instanceof HTMLInputElement) 
			|| !(timeFormatInput instanceof HTMLInputElement)) {
			console.error('Registration form elements not found');
			return;
		}

		// Detect timezone and time format

		function detectAndSetTimezone() {
			// Detect user's timezone and time format
			if (Intl && Intl.DateTimeFormat && timezoneInput instanceof HTMLInputElement && timeFormatInput instanceof HTMLInputElement) {
				try {
					// Detect timezone
					const detectedTimezone = Intl.DateTimeFormat().resolvedOptions().timeZone;
					timezoneInput.value = detectedTimezone;

					// Detect time format preference
					const formatter = new Intl.DateTimeFormat(navigator.language, {
						hour: 'numeric'
					});
					const hour12 = formatter.resolvedOptions().hour12;
					timeFormatInput.value = hour12 === undefined ? '12h' : (hour12 ? '12h' : '24h');
				} catch (error) {
					console.error('Timezone detection failed:', error);
				}
			} else {
				console.error('Intl or DateTimeFormat not available');
			}
		}

		// Initial detection
		detectAndSetTimezone();

		// Re-detect on form submission if values are empty
		form.addEventListener('submit', () => {
			// If values are empty, try to detect again
			// Server-side validation will handle missing values
			if (timezoneInput instanceof HTMLInputElement && timeFormatInput instanceof HTMLInputElement && (!timezoneInput.value || !timeFormatInput.value)) {
				detectAndSetTimezone();
			}
		});
	});
</script>
