---
import HCaptcha from "../../components/HCaptcha.astro";
import Navigation from "../../components/layout/Navigation.astro";
import Layout from "../../layouts/Layout.astro";
import { createSupabaseServerClient } from "../../lib/supabase";
import { getTimezoneOptions } from "../../lib/timezones/timezones";

const search = Astro.url.searchParams;
const error = search.get("error");

let message = "";
let showSignInLink = false;

const supabase = createSupabaseServerClient();
const timezones = await getTimezoneOptions(supabase);

if (error) {
	switch (error) {
		case "missing_fields":
			message = "Email and password are required";
			break;
		case "failed":
			message = "Failed to register account. Please try again.";
			break;
		case "user_already_exists":
			message = "An account with this email already exists.";
			showSignInLink = true;
			break;
		case "profile_creation_failed":
			message =
				"Failed to create user profile. Please try again or contact support.";
			break;
		case "captcha_required":
			message = "Please complete the CAPTCHA and try again.";
			break;
		default:
			message = "An unexpected error occurred. Please try again.";
	}
}
---

<Layout title="Register" description="Create a new account">
  <div class="min-h-screen bg-gray-50">
    <Navigation />
    
    <div class="max-w-3xl mx-auto px-6 py-12">
      <div class="mb-6">
        <a
          href="/"
          class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900 font-medium"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Home
        </a>
      </div>

      <div class="max-w-md mx-auto space-y-8">
        <div>
          <h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Register</h1>
          <p class="mt-2 text-center text-sm text-gray-600">
            Already have an account? <a href="/signin" class="font-medium text-blue-600 hover:text-blue-500">Sign in</a>
          </p>
        </div>

        {message && (
          <div class="rounded-md bg-red-50 p-4" role="alert">
            <div class="flex">
              <div class="ml-0">
                <h3 class="text-sm font-medium text-red-800">
                  {message}
                  {showSignInLink && (
                    <> <a href="/signin" class="font-bold underline hover:text-red-900">Sign in</a>.</>
                  )}
                </h3>
              </div>
            </div>
          </div>
        )}

        <form class="mt-8 space-y-6" action="/api/auth/email/register" method="post" id="register-form">
          <div class="rounded-md shadow-sm -space-y-px">
            <div>
              <label for="email" class="sr-only">Email</label>
              <input 
                type="email" 
                name="email" 
                id="email" 
                required 
                autocomplete="email"
                class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm disabled:bg-gray-100 disabled:cursor-not-allowed" 
                placeholder="Email address"
              />
            </div>
            <div>
              <label for="password" class="sr-only">Password</label>
              <input 
                type="password" 
                name="password" 
                id="password" 
                required 
                autocomplete="new-password"
                class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm disabled:bg-gray-100 disabled:cursor-not-allowed" 
                placeholder="Password"
              />
            </div>
          </div>
          
					<div>
						<label for="timezone" class="block text-sm font-medium text-slate-700 mb-1">
							Timezone
						</label>
						<p class="text-sm text-slate-600 mb-2">
							We auto-detected this, but you can change it if itâ€™s wrong.
						</p>
						<select
							id="timezone"
							name="timezone"
							class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 cursor-pointer disabled:bg-gray-100 disabled:cursor-not-allowed"
						>
							<option value="">
								Select your timezone (optional)
							</option>
							{timezones.map((tz) => (
								<option value={tz.value}>{tz.label}</option>
							))}
						</select>
					</div>

					<div>
						<HCaptcha
							tokenInputId="register_captcha_token"
							callbackName="onRegisterHCaptchaSuccess"
							errorCallback="onRegisterHCaptchaError"
							expiredCallback="onRegisterHCaptchaExpired"
						/>
					<div
						id="register-captcha-status"
						class="mt-2 hidden rounded-md bg-red-50 p-3 text-sm text-red-700"
						role="status"
						aria-live="polite"
					></div>
					</div>
          <div>
            <button 
              type="submit" 
              class={`group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 ${
                "text-white bg-blue-600 hover:bg-blue-700 cursor-pointer"
              }`}
            >
              Register
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</Layout>

<script>
	import { setupDetectedTimezoneOption } from "../../lib/timezones/timezone-select";
	import { DEFAULT_TIMEZONE } from "../../lib/timezones/timezone-constants";

	document.addEventListener('DOMContentLoaded', () => {
		const form = document.getElementById('register-form');
		const emailInputElement = document.getElementById('email');
		const timezoneInputElement = document.getElementById('timezone');
		
		if (!(form instanceof HTMLFormElement) 
			|| !(emailInputElement instanceof HTMLInputElement)
			|| !(timezoneInputElement instanceof HTMLSelectElement)) {
			console.error('Registration form elements not found');
			return;
		}

		emailInputElement.addEventListener('keydown', (e) => {
			if (e.key === ' ') {
				e.preventDefault();
			}
		});
		// Strip spaces from pasted content
		emailInputElement.addEventListener('input', () => {
			emailInputElement.value = emailInputElement.value.replace(/\s/g, '');
		});

		setupDetectedTimezoneOption({ defaultTimezone: DEFAULT_TIMEZONE });

	});
</script>

<script>
	import {
		createCaptchaStatusHelpers,
		initializeHCaptchaForm,
		setupHCaptchaCallback,
		setupHCaptchaErrorCallback,
		setupHCaptchaExpiredCallback,
	} from "../../lib/hcaptcha-utils";

	const captchaStatus = createCaptchaStatusHelpers("register-captcha-status");

	initializeHCaptchaForm("register-form", "register_captcha_token");
	setupHCaptchaCallback(
		"onRegisterHCaptchaSuccess",
		"register_captcha_token",
		"register-form",
	);

	setupHCaptchaErrorCallback("onRegisterHCaptchaError", (errorCode) => {
		console.error("hCaptcha error:", errorCode);
		captchaStatus.show("CAPTCHA failed to load. Please refresh and try again.");
	});

	setupHCaptchaExpiredCallback(
		"onRegisterHCaptchaExpired",
		"register_captcha_token",
		() => {
			captchaStatus.show("CAPTCHA expired. Please complete it again.");
		},
	);

	const captchaTokenInput = document.getElementById("register_captcha_token");
	if (captchaTokenInput instanceof HTMLInputElement) {
		captchaTokenInput.addEventListener("input", () => {
			if (captchaTokenInput.value.trim().length > 0) {
				captchaStatus.hide();
			}
		});
	}
</script>
