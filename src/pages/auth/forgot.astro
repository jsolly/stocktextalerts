---
import HCaptcha from "../../components/HCaptcha.astro";
import Navigation from "../../components/layout/Navigation.astro";
import Layout from "../../layouts/Layout.astro";

const search = Astro.url.searchParams;
const success = search.get("success");
const error = search.get("error");
const secondsNum = Number.parseInt(search.get("seconds") ?? "", 10);
const seconds =
	Number.isFinite(secondsNum) && secondsNum >= 0 ? String(secondsNum) : null;

let message = "";
let messageType: "success" | "error" | null = null;

if (success === "true") {
	message = "If an account exists for that email, a reset link has been sent.";
	messageType = "success";
} else if (error) {
	messageType = "error";
	switch (error) {
		case "rate_limit":
			message = seconds
				? `For security purposes, you must wait ${seconds} more seconds before requesting to reset your password`
				: "You've made too many password reset requests. Please try again later";
			break;
		case "captcha_required":
			message = "Please complete the CAPTCHA and try again.";
			break;
		case "failed":
			message = "Failed to request password reset. Please try again.";
			break;
		default:
			message = "An unexpected error occurred. Please try again.";
	}
}
---

<Layout title="Forgot Password" description="Request a password reset email.">
  <div class="min-h-screen bg-gray-50">
    <Navigation />

    <div class="max-w-3xl mx-auto px-6 py-12">
      <div class="mb-6">
        <a
          href="/signin"
          class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900 font-medium"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Sign in
        </a>
      </div>

      <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg border border-gray-200 p-8">
        <h1 class="text-2xl font-bold text-gray-900 mb-2">Forgot your password?</h1>
        <p class="text-sm text-gray-600 mb-6">Enter your email and we'll send you a link to reset your password.</p>

        {message && (
          <div class={`mb-4 p-4 rounded-md ${messageType === "success" ? "bg-green-50 text-green-700" : "bg-red-50 text-red-700"}`} role="alert">
            {message}
          </div>
        )}

        <form class="space-y-4" action="/api/auth/email/forgot-password" method="post" id="forgot-form">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
            <input 
              type="email" 
              name="email" 
              id="email" 
              required 
              autocomplete="email"
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
              placeholder="you@example.com"
            />
          </div>
          <div>
            <HCaptcha
              tokenInputId="forgot_captcha_token"
              callbackName="onForgotHCaptchaSuccess"
              errorCallback="onForgotHCaptchaError"
              expiredCallback="onForgotHCaptchaExpired"
            />
          </div>
          <div
            id="forgot-captcha-status"
            class="mt-2 hidden rounded-md bg-red-50 p-3 text-sm text-red-700"
            role="status"
            aria-live="polite"
          ></div>
          <button 
            type="submit"
            class="w-full bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md font-medium transition-colors cursor-pointer"
          >
            Send reset link
          </button>
        </form>
      </div>
    </div>
  </div>
</Layout>

<script>
	import {
		createCaptchaStatusHelpers,
		initializeHCaptchaForm,
		setupHCaptchaCallback,
		setupHCaptchaErrorCallback,
		setupHCaptchaExpiredCallback,
	} from "../../lib/hcaptcha-utils";
	import { setupEmailInputHandlers } from "../../lib/forms/utils";

	const captchaStatus = createCaptchaStatusHelpers("forgot-captcha-status");

	document.addEventListener("DOMContentLoaded", () => {
		const emailInput = document.getElementById("email") as HTMLInputElement;
		setupEmailInputHandlers(emailInput);

		const captchaTokenInput = document.getElementById(
			"forgot_captcha_token",
		) as HTMLInputElement | null;
		if (captchaTokenInput) {
			captchaTokenInput.addEventListener("input", () => {
				if (captchaTokenInput.value.trim().length > 0) {
					captchaStatus.hide();
				}
			});
		}
	});

	initializeHCaptchaForm("forgot-form", "forgot_captcha_token");
	setupHCaptchaCallback(
		"onForgotHCaptchaSuccess",
		"forgot_captcha_token",
		"forgot-form",
	);

	setupHCaptchaErrorCallback("onForgotHCaptchaError", (errorCode) => {
		console.error("hCaptcha error:", errorCode);
		captchaStatus.show("CAPTCHA failed to load. Please refresh and try again.");
	});

	setupHCaptchaExpiredCallback(
		"onForgotHCaptchaExpired",
		"forgot_captcha_token",
		() => {
			captchaStatus.show("CAPTCHA expired. Please complete it again.");
		},
	);
</script>

