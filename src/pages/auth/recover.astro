---
import Navigation from "../../components/layout/Navigation.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Reset Password" description="Set a new password for your account.">
  <div class="min-h-screen bg-gray-50">
    <Navigation />

    <div class="max-w-3xl mx-auto px-6 py-12">
      <div class="mb-6">
        <a
          href="/signin"
          class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900 font-medium"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Sign in
        </a>
      </div>

      <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg border border-gray-200 p-8">
        <h1 class="text-2xl font-bold text-gray-900 mb-2">Set a new password</h1>
        <p class="text-sm text-gray-600 mb-6">Choose a strong password for your account.</p>

        <form id="reset-form" class="space-y-4">
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-2">New password</label>
            <input 
              type="password" 
              name="password" 
              id="password" 
              required 
              autocomplete="new-password"
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
              placeholder="••••••••"
              minlength="8"
            />
            <p class="text-sm text-gray-500 mt-1">Minimum 8 characters required</p>
          </div>
          <div>
            <label for="confirm" class="block text-sm font-medium text-gray-700 mb-2">Confirm password</label>
            <input 
              type="password" 
              name="confirm" 
              id="confirm" 
              required 
              autocomplete="new-password"
              class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
              placeholder="••••••••"
              minlength="8"
            />
            <p class="text-sm text-gray-500 mt-1">Minimum 8 characters required</p>
          </div>
          <button 
            type="submit" 
            class="w-full bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md font-medium transition-colors cursor-pointer"
          >
            Update password
          </button>
        </form>

        <div id="message" class="hidden mt-4 p-4 rounded-md"></div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { createClient } from '@supabase/supabase-js';

  const supabase = createClient(
    import.meta.env.PUBLIC_SUPABASE_URL,
    import.meta.env.PUBLIC_SUPABASE_ANON_KEY
  );

  // Get DOM elements first
  const form = document.getElementById("reset-form");
  if (!(form instanceof HTMLFormElement)) {
    throw new Error("Reset form not found");
  }

  const messageDiv = document.getElementById("message");
  if (!(messageDiv instanceof HTMLDivElement)) {
    throw new Error("Reset message container not found");
  }

  // Check for error parameters in URL hash (from Supabase redirect)
  const hashParams = new URLSearchParams(window.location.hash.substring(1));
  const error = hashParams.get('error');
  const errorCode = hashParams.get('error_code');
  
  if (error === 'access_denied' && errorCode === 'otp_expired') {
    showMessage('This password reset link has expired.', 'error', true);
    // Hide the form since the token is invalid
    if (form) {
      form.style.display = 'none';
    }
  } else {
    // Handle normal token verification from query parameters
    const search = new URLSearchParams(window.location.search);
    const token = search.get('token');
    const type = search.get('type');

    if (token && type === 'recovery') {
      (async () => {
        // Disable form and controls before verification
        const passwordInput = document.getElementById("password");
        const confirmInput = document.getElementById("confirm");
        const submitButton = form.querySelector('button[type="submit"]');
        if (
          !(passwordInput instanceof HTMLInputElement) ||
          !(confirmInput instanceof HTMLInputElement) ||
          !(submitButton instanceof HTMLButtonElement)
        ) {
          throw new Error("Reset form inputs not found");
        }
        
        form.classList.add("busy");
        form.setAttribute("aria-busy", "true");
        passwordInput.disabled = true;
        confirmInput.disabled = true;
        submitButton.disabled = true;

        const { error } = await supabase.auth.verifyOtp({
          token_hash: token,
          type: 'recovery'
        });

        if (error) {
          console.error('Token verification failed:', error);
          showMessage('Invalid or expired reset link.', 'error', true);
          // Hide the form since the token is invalid (form remains disabled)
          form.style.display = "none";
          form.removeAttribute("aria-busy");
        } else {
          // Re-enable form and controls on success
          form.classList.remove("busy");
          form.removeAttribute("aria-busy");
          passwordInput.disabled = false;
          confirmInput.disabled = false;
          submitButton.disabled = false;
        }
      })();
    }
  }

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const submitButton = form.querySelector('button[type="submit"]');
    const passwordInput = document.getElementById("password");
    const confirmInput = document.getElementById("confirm");
    if (
      !(submitButton instanceof HTMLButtonElement) ||
      !(passwordInput instanceof HTMLInputElement) ||
      !(confirmInput instanceof HTMLInputElement)
    ) {
      throw new Error("Reset form inputs not found");
    }

    if (passwordInput.value !== confirmInput.value) {
      showMessage('Passwords do not match', 'error');
      return;
    }

    submitButton.disabled = true;
    submitButton.textContent = 'Updating...';

    const { error } = await supabase.auth.updateUser({ password: passwordInput.value });
    
    submitButton.disabled = false;
    submitButton.textContent = 'Update password';

    if (error) {
      console.error('Password update failed:', error);
      
      let userMessage = 'Failed to update password. Please try again.';
      if (error.code === 'weak_password') {
        userMessage = 'Password does not meet security requirements. Please choose a stronger password.';
      }
      
      showMessage(userMessage, 'error');
      return;
    }

    window.location.href = '/signin?success=password_reset';
  });

  function showMessage(text: string, type: 'success' | 'error', showForgotLink = false) {
    if (!messageDiv) return;
    
    messageDiv.innerHTML = '';
    
    if (showForgotLink) {
      const container = document.createElement('div');
      container.className = 'bg-red-50 text-red-700 p-4 rounded-md';
      container.setAttribute('role', 'alert');
      
      const textDiv = document.createElement('div');
      textDiv.className = 'mb-2';
      textDiv.textContent = text;
      
      const link = document.createElement('a');
      link.href = '/auth/forgot';
      link.className = 'inline-flex items-center text-sm font-medium text-red-700 hover:text-red-800 underline';
      link.textContent = 'Request a new password reset';
      
      container.appendChild(textDiv);
      container.appendChild(link);
      messageDiv.appendChild(container);
    } else {
      messageDiv.textContent = text;
      messageDiv.className = `mt-4 p-4 rounded-md ${type === 'success' ? 'bg-green-50 text-green-700' : 'bg-red-50 text-red-700'}`;
      messageDiv.setAttribute('role', 'alert');
    }
    
    messageDiv.classList.remove('hidden');
  }
</script>

