---
import Navigation from "../../components/layout/Navigation.astro";
import Layout from "../../layouts/Layout.astro";

const search = Astro.url.searchParams;
const token = search.get("token");
const type = search.get("type");
const error = search.get("error");

let message = "";
let showResetLink = false;

const hasValidToken = Boolean(token) && type === "recovery";
let showForm = hasValidToken;

if (!hasValidToken) {
	message = "This password reset link is invalid.";
	showResetLink = true;
	showForm = false;
} else if (error) {
	switch (error) {
		case "invalid_form":
			message = "Please check the form and try again.";
			break;
		case "password_mismatch":
			message = "Passwords do not match.";
			break;
		case "weak_password":
			message =
				"Password does not meet security requirements. Please choose a stronger password.";
			break;
		case "expired":
			message = "This password reset link has expired.";
			showResetLink = true;
			showForm = false;
			break;
		case "invalid_token":
			message = "This password reset link is invalid.";
			showResetLink = true;
			showForm = false;
			break;
		default:
			message = "Failed to update password. Please try again.";
	}
}
---

<Layout title="Reset Password" description="Set a new password for your account.">
  <div class="min-h-screen bg-gray-50">
    <Navigation />

    <div class="max-w-3xl mx-auto px-6 py-12">
      <div class="mb-6">
        <a
          href="/signin"
          class="inline-flex items-center text-sm text-gray-600 hover:text-gray-900 font-medium"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Sign in
        </a>
      </div>

      <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg border border-gray-200 p-8">
        <h1 class="text-2xl font-bold text-gray-900 mb-2">Set a new password</h1>
        <p class="text-sm text-gray-600 mb-6">Choose a strong password for your account.</p>

        {message && (
          <div class="mb-4 rounded-md p-4 bg-red-50 text-red-700" role="alert">
            {message}
          </div>
        )}

        {showForm && (
          <form id="reset-form" class="space-y-4" action="/api/auth/update-password" method="post">
            <input type="hidden" name="token" value={token ?? ""} />
            <input type="hidden" name="type" value={type ?? ""} />
            <div>
              <label for="password" class="block text-sm font-medium text-gray-700 mb-2">New password</label>
              <input
                type="password"
                name="password"
                id="password"
                required
                autocomplete="new-password"
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="••••••••"
                minlength="8"
              />
              <p class="text-sm text-gray-500 mt-1">Minimum 8 characters required</p>
            </div>
            <div>
              <label for="confirm" class="block text-sm font-medium text-gray-700 mb-2">Confirm password</label>
              <input
                type="password"
                name="confirm"
                id="confirm"
                required
                autocomplete="new-password"
                class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="••••••••"
                minlength="8"
              />
              <p class="text-sm text-gray-500 mt-1">Minimum 8 characters required</p>
            </div>
            <button
              type="submit"
              class="w-full bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md font-medium transition-colors cursor-pointer"
            >
              Update password
            </button>
          </form>
        )}

        {showResetLink && (
          <div class="mt-6 text-center">
            <a href="/auth/forgot" class="text-sm font-medium text-blue-600 hover:text-blue-500">
              Request a new password reset
            </a>
          </div>
        )}
      </div>
    </div>
  </div>
</Layout>

