---
import PreviewNotificationButton from "./PreviewNotificationButton.astro";

interface Props {
	emailEnabled: boolean;
	smsEnabled: boolean;
}

const { emailEnabled, smsEnabled } = Astro.props;

const showSection = emailEnabled || smsEnabled;
---

{showSection && (
	<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mt-8">
		<h2 class="text-2xl font-bold text-gray-900 mb-4">Preview Notifications</h2>
		<p class="text-gray-600 mb-6">
			Send a preview notification to verify your settings. These will be sent
			immediately, regardless of your time window preferences.
		</p>

		<div class="flex gap-4">
			{emailEnabled && (
				<PreviewNotificationButton type="email" buttonText="Send Preview Email" />
			)}
			{smsEnabled && (
				<PreviewNotificationButton type="sms" buttonText="Send Preview SMS" />
			)}
		</div>
	</div>
)}

