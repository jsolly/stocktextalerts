---
interface Props {
	label: string;
	value: string;
	helperText?: string;
}

const { label, value, helperText } = Astro.props as Props;
---

<div>
	<label class="block text-sm font-medium text-gray-700 mb-2">
		{label}
	</label>
	<input
		type="text"
		value={value}
		readonly
		class="w-full px-4 py-3 border border-gray-300 rounded-md bg-gray-100 text-gray-500 cursor-text"
	/>
	{helperText && (
		<p class="mt-2 text-sm text-gray-500">
			{helperText}
		</p>
	)}
</div>

