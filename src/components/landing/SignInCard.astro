---
import HCaptcha from "../HCaptcha.astro";

interface Props {
	emailPrefill?: string;
	errorMessage?: string | null;
	successMessage?: string | null;
}

const {
	emailPrefill = "",
	errorMessage = null,
	successMessage = null,
} = Astro.props;
---

<div class="max-w-md mx-auto bg-white rounded-lg shadow-lg border border-gray-200 p-8 mb-20">
  <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Sign in to your account</h2>
  {successMessage && (
    <div class="mb-4 rounded-md bg-green-50 p-4" role="alert">
      <p class="text-sm font-medium text-green-800">{successMessage}</p>
    </div>
  )}
  {errorMessage && (
    <div class="mb-4 rounded-md bg-red-50 p-4" role="alert">
      <p class="text-sm font-medium text-red-800">{errorMessage}</p>
    </div>
  )}
  <form class="space-y-6" action="/api/auth/signin" method="post" id="signin-form">
    <div>
      <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
      <input 
        type="email" 
        name="email" 
        id="email" 
        required 
        autocomplete="email"
        class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
        placeholder="you@example.com"
        value={emailPrefill}
      />
    </div>
    <div>
      <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
      <input 
        type="password" 
        name="password" 
        id="password" 
        required 
        autocomplete="current-password"
        class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
        placeholder="••••••••"
      />
    </div>
		<div>
			<HCaptcha
				tokenInputId="signin_captcha_token"
				callbackName="onSignInHCaptchaSuccess"
				errorCallback="onSignInHCaptchaError"
				expiredCallback="onSignInHCaptchaExpired"
			/>
			<div
				id="signin-captcha-status"
				class="mt-2 hidden rounded-md bg-red-50 p-3 text-sm text-red-700"
				role="status"
				aria-live="polite"
			></div>
		</div>
    <div class="flex items-center justify-between">
      <div class="text-sm">
        <a href="/auth/forgot" class="font-medium text-blue-600 hover:text-blue-500">Forgot your password?</a>
      </div>
    </div>
    <button 
      type="submit" 
      class="w-full text-white px-6 py-3 rounded-md font-medium transition-colors bg-blue-600 hover:bg-blue-700 cursor-pointer"
    >
      Sign In
    </button>
  </form>
  <p class="mt-6 text-center text-sm text-gray-600">
    New here? <a href="/auth/register" class="font-medium text-blue-600 hover:text-blue-500">Create an account</a>
  </p>
</div>

<script>
	import {
		createCaptchaStatusHelpers,
		initializeHCaptchaForm,
		setupHCaptchaCallback,
		setupHCaptchaErrorCallback,
		setupHCaptchaExpiredCallback,
	} from "../../lib/hcaptcha-utils";

	const captchaStatus = createCaptchaStatusHelpers("signin-captcha-status");

	document.addEventListener("DOMContentLoaded", () => {
		const form = document.getElementById("signin-form");
		if (!(form instanceof HTMLFormElement)) {
			return;
		}

		const emailInput = document.getElementById("email");
		if (emailInput instanceof HTMLInputElement) {
			emailInput.addEventListener("keydown", (e) => {
				if (e.key === " ") {
					e.preventDefault();
				}
			});
			// Strip spaces from pasted content
			emailInput.addEventListener("input", () => {
				emailInput.value = emailInput.value.replace(/\s/g, "");
			});
		}

		const captchaTokenInput = document.getElementById("signin_captcha_token");
		if (!(captchaTokenInput instanceof HTMLInputElement)) {
			return;
		}

		form.addEventListener("submit", (event) => {
			const captchaResponse =
				form.querySelector<HTMLInputElement>(
					"input[name='h-captcha-response']",
				)?.value ?? "";

			const existingToken = captchaTokenInput.value.trim();
			const trimmedCaptchaResponse = captchaResponse.trim();

			if (existingToken.length === 0 && trimmedCaptchaResponse.length === 0) {
				event.preventDefault();
				captchaStatus.show("Please complete the CAPTCHA verification.");
				return;
			}

			if (existingToken.length === 0 && trimmedCaptchaResponse.length > 0) {
				captchaTokenInput.value = trimmedCaptchaResponse;
			}
		});

		captchaTokenInput.addEventListener("input", () => {
			if (captchaTokenInput.value.trim().length > 0) {
				captchaStatus.hide();
			}
		});
	});

	initializeHCaptchaForm("signin-form", "signin_captcha_token");
	setupHCaptchaCallback(
		"onSignInHCaptchaSuccess",
		"signin_captcha_token",
		"signin-form",
		() => {
			captchaStatus.hide();
		},
	);
	setupHCaptchaErrorCallback("onSignInHCaptchaError");
	setupHCaptchaExpiredCallback(
		"onSignInHCaptchaExpired",
		"signin_captcha_token",
	);
</script>
