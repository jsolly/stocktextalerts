---
interface Props {
	isAuthenticated: boolean;
}

const { isAuthenticated } = Astro.props;
---

<div class="bg-white">
  <div class="max-w-7xl mx-auto">
    <main class="mt-16 mx-auto max-w-7xl px-4 sm:mt-20 sm:px-6 md:mt-24 lg:mt-32 lg:px-8 xl:mt-40">
      <div class="text-center">
        <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl lg:text-7xl">
          <span class="block xl:inline">Stock alerts, news & trends</span>
          <span class="block text-blue-600 xl:inline">texted to your phone</span>
        </h1>
        <p class="mt-6 text-lg text-gray-500 sm:mt-8 sm:text-xl sm:max-w-2xl sm:mx-auto md:mt-10 md:text-2xl md:leading-relaxed">
          Stop staring at charts all day. Get price alerts, breaking news, and trend shifts for your stocksâ€”delivered straight to your phone. Simple, reliable, and distraction-free.
        </p>
        <div class="mt-8 sm:mt-12">
            {isAuthenticated ? (
              <div class="flex flex-col items-center gap-4">
                <p class="text-lg text-gray-600">You're already logged in.</p>
                <a 
                  href="/dashboard"
                  class="shadow flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10"
                >
                  Go to Dashboard
                </a>
              </div>
            ) : (
              <div class="flex justify-center">
                <a 
                  href="/auth/register" 
                  class="shadow flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10"
                >
                  Start Tracking for Free
                </a>
              </div>
            )}
        </div>
      </div>
    </main>
  </div>
</div>
